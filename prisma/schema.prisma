generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum USER_ROLE {
  CUSTOMER
  ADMIN
}

enum IDENTITY_TYPE {
  KTP
  SIM
  KTM
  NPWP
  PASSPORT
  OTHERS
}

enum BANK_NAME {
  BRI
  BCA
  MANDIRI
  BNI
  BSI
  CIMB
  PERMATA
  DANAMON
  OTHERS
}

model Users {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  password String
  role     USER_ROLE @default(CUSTOMER)

  Profiles      Profiles?
  Bank_Accounts Bank_Accounts[]
  UserDatas     UserDatas[]

  @@map("users")
}

model Bank_Accounts {
  id                  Int       @id @default(autoincrement())
  bank_name           BANK_NAME
  bank_account_number String
  balance             Float
  user_id             Int

  Users                   Users          @relation(fields: [user_id], references: [id], onDelete: Cascade)
  SourceBankAccounts      Transactions[] @relation("source_bank_account")
  DestinationBankAccounts Transactions[] @relation("destination_bank_account")

  @@map("bankAccounts")
}

model Profiles {
  id              Int           @id @default(autoincrement())
  identity_type   IDENTITY_TYPE
  identity_number String
  address         String
  user_id         Int           @unique

  Users Users @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@map("profiles")
}

model Transactions {
  id                     Int   @id @default(autoincrement())
  source_account_id      Int
  destination_account_id Int
  amount                 Float

  SourceBankAccounts      Bank_Accounts @relation(name: "source_bank_account", fields: [source_account_id], references: [id])
  DestinationBankAccounts Bank_Accounts @relation(name: "destination_bank_account", fields: [destination_account_id], references: [id])

  @@index(fields: [source_account_id])
  @@map("transactions")
}

model UserDatas {
  id          Int    @id @default(autoincrement())
  file_id     String @unique
  file_url    String @unique
  file_type   String
  name        String
  description String

  userID Users @relation(fields: [userId], references: [id])
  userId Int
}
